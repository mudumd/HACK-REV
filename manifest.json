{
    "manifest_version": 3,
    "name": "Deepfake Voice Detection",
    "version": "1.0",
    "description": "An AI-driven system to detect deepfake voices and provide a trust score.",
    "permissions": ["activeTab", "storage", "scripting"],
    "host_permissions": ["*://*/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  